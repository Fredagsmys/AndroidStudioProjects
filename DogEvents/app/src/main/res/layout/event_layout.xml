<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventLayout"
    android:background="@drawable/layout_drawable"
    android:gravity="center"
    android:padding="20dp"
    android:layout_margin="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:shadowColor="@color/black"
            android:shadowDx="@dimen/shadowDimenXXS"
            android:shadowDy="@dimen/shadowDimenYXS"
            android:shadowRadius="@dimen/shadowRadXS"
            android:text="Event"
            android:textColor="@color/whiteText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eventSetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:shadowColor="@color/black"
            android:shadowDx="@dimen/shadowDimenXXS"
            android:shadowDy="@dimen/shadowDimenYXS"
            android:shadowRadius="@dimen/shadowRadXS"
            android:text="Setter"
            android:textColor="@color/whiteText"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:shadowColor="@color/black"
            android:shadowDx="@dimen/shadowDimenXXS"
            android:shadowDy="@dimen/shadowDimenYXS"
            android:shadowRadius="@dimen/shadowRadXS"
            android:text="time"
            android:textColor="@color/whiteText"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>