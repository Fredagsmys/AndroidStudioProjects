<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventViewer"
    android:background="@drawable/dog_wallpaper"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ã–verblick"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/aldrich"
        android:shadowRadius="10"
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastPee"
        android:text="Sist kiss"
        android:textColor="@color/peeColor"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_weight="1"
        android:fontFamily="@font/aldrich"
        android:shadowRadius="10"
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastPoop"
        android:text="Sist skit"
        android:textColor="@color/poopColor"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_weight="1"
        android:fontFamily="@font/aldrich"
        android:shadowRadius="10"
        android:shadowDy="5"
        android:shadowDx="5"
        android:shadowColor="@color/black"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/parentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/peeButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="@string/kiss"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:elevation="20dp"
            android:textAllCaps="false"
            android:theme="@style/myButtonStyle"/>

        <Button
            android:id="@+id/poopButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="@string/skit"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:elevation="20dp"
            android:textAllCaps="false"
            android:theme="@style/myButtonStyle"/>

    </LinearLayout>

</LinearLayout>